<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <img class='column-cover-image' src="<%= column.cover_url %>">
    <div class="caption">
      <h3><%= column.name %></h3>
      <p><%= column.description %></p>
      <p>
        <a href="<%=column_path(column) %>" class="btn btn-primary" role="button">进入该专栏</a>
        <a href="<%=edit_column_path(column) %>" class="btn btn-default" role="button">编辑专栏</a>
      </p>
    </div>
  </div>
</div>
