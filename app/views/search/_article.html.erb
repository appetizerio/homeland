<%
  title = hit.highlight.title.try(:first) || item.title
%>
<div class="result">
  <div class="topic title">
    <%= link_to highlight(title), item %>
    <%= topic_excellent_tag(item) %>
  </div>



  <div class="info">
    <span class="url"><%= link_to polymorphic_url(item), item %></span>
    <span class="date" title="Last Updated At"><%= item.created_at.to_date %></span>
  </div>
  <div class="desc"><%= highlight(hit.highlight.body.try(:first)) %></div>
</div>