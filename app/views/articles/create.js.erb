<% if @article.errors.empty? %>
  <% flash[:notice] = t('topics.create_topic_success') %>
  Turbolinks.visit('<%= article_path(@article.id) %>');
<% else %>
  $('form[tb="edit-topic"] .alert').remove();
  $('form[tb="edit-topic"]').prepend('<%= j render("shared/error_messages", target: @article) %>');
<% end %>
